@model EduTube.GUI.ViewModels.LoginViewModel
@{
   ViewData["Title"] = "Login";
}
@section Styles{
   <link href="~/css/Login.css" rel="stylesheet" />
}
<div class="" id="loginDiv">
   <h5 class="text-center whiteColor">Login</h5>
   <form method="post" asp-controller="Users" asp-action="Login">
      <label class="col-form-label whiteColor">Email</label>
      <input asp-for="RedirectUrl" type="hidden" />
      <input asp-for="Email" class="form-control" placeholder="Email" style="font-family:Arial, FontAwesome" />
      <span asp-validation-for="Email" style="color:red;"></span>
      <br />
      <label class="col-form-label whiteColor">Password</label>
      <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
      <span asp-validation-for="Password" style="color:red;"></span>

      <div class="col-12" style="padding: 0;">
         <input asp-for="RememberMe" id="rememberMe" />
         <label class="col-form-label whiteColor">Remember me</label>
      </div>

      <button type="submit" class="purpleBtn" id="signInButton">Sing in</button>
   </form>
   <div class="text-center" id="optionsDiv">
      <a class="whiteColor">Forgot password?</a>
      <div class="or">
         <hr class="bar" />
         <span class="whiteColor">OR</span>
         <hr class="bar" />
      </div>
      <button id="createAccount" onclick='RedirectTo("/Register")'>Create an account</button>
   </div>
</div>