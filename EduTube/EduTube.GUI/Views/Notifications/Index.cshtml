@model IEnumerable<EduTube.BLL.Models.NotificationModel>
@{
   ViewData["Title"] = "Notifications";
}
@section Styles{
   <link href="~/css/NotificationsPage.css" rel="stylesheet" />
}
@if (Model.Any())
{
   <div class="container greyBackground" id="notifDiv">
      @for (int i = 0; i < Model.Count(); i++)
      {
         <div class="row padding1">
            <div class="col-lg-10 col-md-10 col-sm-12">
            <div class="row">
               <div class="col-lg-1 col-md-2 col-sm-2 marginAuto">
                  <div class="notificationUserImageDiv">
                     <img src="/profileImages/@Model.ElementAtOrDefault(i).UserProfileImage">
                  </div>
               </div>
               <div class="col-lg-11 col-md-10 col-sm-10 breakWord marginAuto">
                  @Html.Raw(Model.ElementAtOrDefault(i).Content)
               </div>
            </div>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-12 marginAuto">
               <span class="float-right" id="dateSpan">
                  @Html.Raw(Model.ElementAtOrDefault(i).DateCreatedOn.ToString("yyyy-MM-dd hh:mm"))
               </span>
            </div>
         </div>
         @if (Model.Count() - 1 != i)
         {
            <div class="row breakLineWhite"></div>
         }
      }
