@model IEnumerable<EduTube.BLL.Models.VideoModel>
@{
   ViewData["Title"] = "Home Page";
}

@section Styles{ }
<h2 class="text-center">Popular videos</h2>
<div class="row">
   @foreach (var video in Model)
   {
      <div class="col-lg-2">
         <a href="/Videos/@video.Id">
            @if (video.FileName != null)
            {
               <img src="~/thumbnails/@video.Thumbnail" width="160" height="180" />
            }
            @if (video.FileName == null)
            {
               <img src="@video.Thumbnail" width="160" height="180" />
            }
            <h6 class="text-white">@video.Name</h6>
         </a>
         <a href="/Users/@video.UserChannelName.Replace(" ", "-")">
            <h6 class="text-white">@video.UserChannelName</h6>
         </a>
         <h6>@video.DateCreatedOn</h6>
      </div>
   }
</div>

<h2 id="firstRecommendedHeading"></h2>
<div class="row" id="firstRecommendedVideosRow">
</div>
<h2 id="secondRecommendedHeading"></h2>
<div class="row" id="secondRecommendedVideosRow">
</div>

@section Scripts{
   <script src="~/js/HomePage.js"></script>
}