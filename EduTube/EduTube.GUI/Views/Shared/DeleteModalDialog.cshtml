
@section  Styles{ 
   <link href="~/css/DeleteDialog.css" rel="stylesheet" />
}
<div class="modal-dialog" id="dialogBody">
   <div class="modal-content greyBackground">
      <!-- Modal Header -->
      <div class="modal-header">
         <h4 class='col-12 modal-title text-center'>
            @if (ViewData["type"].Equals("video"))
            {
               <span>Are you shure that you want to delete this video?</span>
            }
            @if (ViewData["type"].Equals("comment"))
            {
               <span>Are you shure that you want to delete this comment?</span>
            }
            @if (ViewData["type"].Equals("user"))
            {
               <span>Are you shure that you want to delete this profile?</span>
            }
         </h4>
      </div>
      <!-- Modal body -->
      <div class="modal-body">
         <button class="grayBtn" id="cancelDelete" data-dismiss='modal'>Cancel</button>
         @if (ViewData["type"].Equals("video"))
         {
            <button class="redBtn" onclick="DeleteVideoConfirm(@ViewData["id"])" id="confirmDelete">Delete</button>
         }
         @if (ViewData["type"].Equals("comment"))
         {
            <button class="redBtn" onclick="DeleteCommentConfirm(@ViewData["id"])" id="confirmDelete">Delete</button>
         }
         @if (ViewData["type"].Equals("user"))
         {
            <button class="redBtn" onclick='DeleteUserConfirm("@ViewData["id"]")' id="confirmDelete">Delete</button>
         }
      </div>
      <!-- Modal footer -->
   </div>
</div>